---
export interface Props {
  href: string;
  title: string;
  year?: string | number;
  summary?: string;
  cover: string;
}
const { href, title, year, summary, cover } = Astro.props as Props;
const to = href.startsWith('http') ? href : `${import.meta.env.BASE_URL}${href.replace(/^\//,'')}`;
---
<a class="card" href={to}>
  <figure>
    <img src={cover} alt={title} loading="lazy" />
  </figure>
  <div class="meta">
    <h3>{title}</h3>
    {year && <span class="year">{year}</span>}
  </div>
  {summary && <p>{summary}</p>}
</a>